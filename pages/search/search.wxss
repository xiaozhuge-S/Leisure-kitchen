.header .search{
  overflow: hidden;
  height: 80rpx;
  
}
.header .search input{
  border: 1rpx solid #89C3EB;
  border-radius: 80rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  position: relative;
}
.header .search .search_icon{
  height: 58rpx;
  width: 80rpx;
  position: absolute;
  right: 0;
  top: 0;
  background: #89C3EB;
}
.header .search .search_icon image{
  height: 45rpx;
  width: 45rpx;
  position: absolute;
  top: 5rpx;
  right: 20rpx;
}

.hot_list{
  padding: 15rpx;
  
}
.hot_list .list{
  /* background: pink; */
  border: 1rpx solid #89C3EB;
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
  box-shadow: 10rpx 10rpx 10rpx #89C3EB;
  margin-bottom: 30rpx;
}
.hot_list .list .list_l{
  float: left;
  /* background: pink; */
}
.hot_list .list .list_l image{
  height: 180rpx;
  width: 200rpx;
}
.hot_list .list .list_r{
  height: 100%;
  overflow: hidden;
  /* background: skyblue; */
  padding: 10rpx;
  box-sizing: border-box;

}
.hot_list .list .list_r .r_title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.hot_list .list .list_r .des{
  font-size: 25rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}
.hot_list .list .list_r .bom{
  font-size: 25rpx;
  overflow: hidden;
}
.hot_list .list .list_r .bom .look{
  float: left;
}
.hot_list .list .list_r .bom .collect{
  float: right;
}