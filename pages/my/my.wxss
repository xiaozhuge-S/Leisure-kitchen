/* pages/my/my.wxss */
.tabs-title {
  display: inline-block;
  width: 50%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #ffffff;
  background-color: rgba(137,195,235, 0.3);
  border: 1px solid rgba(137,195,235, 0.6);
  box-sizing: border-box;
  border-radius: 8rpx;
}
.tabs-title:hover {
  color: #999999;  
}
/* 列表 */
.hot .hot_list{
  padding: 15rpx;
  
}
.hot .hot_list .list{
  /* background: pink; */
  border: 1rpx solid #89C3EB;
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
  box-shadow: 10rpx 10rpx 10rpx #89C3EB;
  margin-bottom: 30rpx;
}
.hot .hot_list .list .list_l{
  float: left;
  /* background: pink; */
}
.hot .hot_list .list .list_l image{
  height: 180rpx;
  width: 200rpx;
}
.hot .hot_list .list .list_r{
  height: 100%;
  overflow: hidden;
  /* background: skyblue; */
  padding: 10rpx;
  box-sizing: border-box;

}
.hot .hot_list .list .list_r .r_title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.hot .hot_list .list .list_r .des{
  font-size: 25rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}
.hot .hot_list .list .list_r .bom{
  font-size: 25rpx;
  overflow: hidden;
}
.hot .hot_list .list .list_r .bom .look{
  float: left;
}
.hot .hot_list .list .list_r .bom .collect{
  float: right;
}