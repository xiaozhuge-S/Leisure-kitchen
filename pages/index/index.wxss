/* 闲暇时光小厨房头部 */
.header{
  height: 100rpx;
  /* background-color: #ccc; */
  padding: 30rpx 50rpx 10rpx;
  /* display: flex; */
}
.header .logo{
  /* flex: 3; */
  float: left;
  height: 100rpx;
  /* background: pink; */
}
.header .logo image{
  height: 100rpx;
  width: 100rpx;
  /* background: skyblue; */
  margin: 0 50rpx;
}
.header .search{
  /* flex: 5; */
  overflow: hidden;
  height: 80rpx;
  /* margin-top: 10rpx; */
  
}
.header .search input{
  border: 1rpx solid #89C3EB;
  border-radius: 80rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  position: relative;
}
.header .search .search_icon{
  height: 58rpx;
  width: 80rpx;
  position: absolute;
  right: 0;
  top: 0;
  background: #89C3EB;
}
.header .search .search_icon image{
  height: 45rpx;
  width: 45rpx;
  position: absolute;
  top: 5rpx;
  right: 20rpx;
}
/* 闲暇时光小厨房nav */
.nav{
  overflow: hidden;
  margin: 30rpx 0;
}
.nav .nav_list{
  width: 25%;
  height: 150rpx;
  /* background: pink; */
  float: left;
  text-align: center;
  margin-bottom: 30rpx;
}
.nav .nav_list .list{
  width: 100%;
  margin: 0 auto;
}
.nav .nav_list image{
  width: 110rpx;
  height: 110rpx;
}
.nav .nav_list .text{
  font-size: 25rpx;
  margin-top: 0;
}
/* 闲暇时光小厨房热门菜谱 */
.hot .hot_title{
  text-align: center;
  color: #89C3EB;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.hot .hot_list{
  padding: 15rpx;
  
}
.hot .hot_list .list{
  /* background: pink; */
  border: 1rpx solid #89C3EB;
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
  box-shadow: 10rpx 10rpx 10rpx #89C3EB;
  margin-bottom: 30rpx;
}
.hot .hot_list .list .list_l{
  float: left;
  /* background: pink; */
}
.hot .hot_list .list .list_l image{
  height: 180rpx;
  width: 200rpx;
}
.hot .hot_list .list .list_r{
  height: 100%;
  overflow: hidden;
  /* background: skyblue; */
  padding: 10rpx;
  box-sizing: border-box;

}
.hot .hot_list .list .list_r .r_title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.hot .hot_list .list .list_r .des{
  font-size: 25rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}
.hot .hot_list .list .list_r .bom{
  font-size: 25rpx;
  overflow: hidden;
}
.hot .hot_list .list .list_r .bom .look{
  float: left;
}
.hot .hot_list .list .list_r .bom .collect{
  float: right;
}

/* 闲暇时光小厨房热门底部 */
.footer{
  text-align: center;
  color: #89C3EB;
  font-size: 30rpx;
  margin: 30rpx;
}